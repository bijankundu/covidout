<%- include('partials/header') -%>

<div class="container">
  <div class="row mx-auto">
    <div class="col-lg col-md-6">
      <h4 class="head-top">
        Coronavirus Outbreak in <span class="country"><%= country %></span>
      </h4>
    </div>
    <div class="text-right col-lg col-md-6">
      <div class="date">
        <h6>Jan 30, 2020 --> <%= today %> (today)</h6>
      </div>
    </div>
  </div>
  <div class="row card-row mx-auto">
    <div class="card col-lg col-md-6  country_total">
      <div class="card-title card-heading">
        TOTAL CASES
      </div>
      <div style="color: #0011ff;">
        <i class="fas fa-virus fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #0010f2;"><%= country_total %></h1>
      <p class="card-text">
        <%= country_total_percentage%>% of total cases in the world.
      </p>
    </div>
    <div class="card col-lg col-md-6 country_active">
      <div class="card-title card-heading">
        ACTIVE CASES
      </div>
      <div style="color: #ff8903;">
        <i class="fas fa-heartbeat fa-2x"></i>
      </div>
      <h1 class="card-title" style="color:#ff8903"><%= country_active %></h1>
      <p class="card-text">
        <%= country_active_cases_percentage %>% of total active cases.
      </p>
    </div>
    <div class="card col-lg col-md-6 country_recovered">
      <div class="card-title card-heading">
        TOTAL RECOVERED
      </div>
      <div style="color: #15b100;">
        <i class="fas fa-hand-holding-heart fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #15b100;">
        <%= country_recovered %>
      </h1>
      <p class="card-text">
        <%= country_recovered_percentage %>% of total active cases.
      </p>
    </div>
    <div class="card col-lg col-md-6 country_critical">
      <div class="card-title card-heading">
        CRITICAL CASES
      </div>
      <div style="color: #ff0000;">
        <i class="fas fa-procedures fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #ff0000;">
        <%= country_critical %>
      </h1>
      <p class="card-text">
        <%= country_critical_percentage %>% of total active cases.
      </p>
    </div>
    <div class="card col-lg col-md-6 country_dead">
      <div class="card-title card-heading">
        TOTAL DEATH
      </div>
      <div style="color: #636161;">
        <i class="fas fa-heart-broken fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #636161;"><%= country_dead %></h1>
      <p class="card-text">
        <%= country_dead_percentage %>% of total active cases.
      </p>
    </div>
  </div>

  <div class="row world-stats justify-content-center">
    <h2>World Status</h2>
  </div>
  <div class="row card-row mx-auto">
    <div class="card col-md-6 col-sm-12 col-lg country_total">
      <div class="card-title card-heading">
        TOTAL CASES
      </div>
      <div style="color: #0011ff;">
        <i class="fas fa-virus fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #0010f2;"><%= world_total %></h1>
    </div>
    <div class="card col-md-6 col-sm-12 col-lg country_active">
      <div class="card-title card-heading">
        ACTIVE CASES
      </div>
      <div style="color: #ff8903;">
        <i class="fas fa-heartbeat fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #ff8903;"><%= world_active %></h1>
    </div>
    <div class="card col-md-6 col-sm-12 col-lg country_recovered">
      <div class="card-title card-heading">
        TOTAL RECOVERED
      </div>
      <div style="color: #15b100;">
        <i class="fas fa-hand-holding-heart fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #15b100;"><%= world_recovered %></h1>
    </div>
    <div class="card col-md-6 col-sm-12 col-lg country_critical">
      <div class="card-title card-heading">
        AFFECTED COUNTRIES
      </div>
      <div style="color: #ff0000;">
        <i class="fas fa-globe-asia fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #ff0000;"><%= world_affected %></h1>
    </div>
    <div class="card col-md-6 col-sm-12 col-lg country_dead">
      <div class="card-title card-heading">
        TOTAL DEATH
      </div>
      <div style="color: #636161;">
        <i class="fas fa-heart-broken fa-2x"></i>
      </div>
      <h1 class="card-title" style="color: #636161;"><%= world_dead %></h1>
      <p class="card-text"><%= world_dead_percentage %>% of total cases.</p>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
